<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

        <fragment
            android:id="@+id/homeFragment"
            android:name="com.example.financialportfolio.presentation.home.HomeFragment"
            android:label="Home"
            tools:layout="@layout/fragment_home">
            <action
                android:id="@+id/action_homeFragment_to_assetsListFragment"
                app:destination="@id/assetsListFragment" />
            <action
                android:id="@+id/action_homeFragment_to_portfolioFragment"
                app:destination="@id/portfolioFragment" />
            <action
                android:id="@+id/action_homeFragment_to_settingsFragment"
                app:destination="@id/settingsFragment" />
        </fragment>

    <fragment
        android:id="@+id/assetsListFragment"
        android:name="com.example.financialportfolio.presentation.assets.AssetListFragment"
        android:label="Assets List"
        tools:layout="@layout/fragment_assets_list" >
        <action
            android:id="@+id/action_assetsListFragment_to_assetDetailFragment"
            app:destination="@id/assetDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/portfolioFragment"
        android:name="com.example.financialportfolio.presentation.portfolio.PortfolioFragment"
        android:label="PortfolioFragment"
        tools:layout="@layout/fragment_portfolio" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.financialportfolio.presentation.settings.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/assetDetailFragment"
        android:name="com.example.financialportfolio.presentation.assetDetail.AssetDetailFragment"
        android:label="fragment_asset_detail"
        tools:layout="@layout/fragment_asset_detail" >
        <argument android:name="Id"
            app:argType="integer" />
    </fragment>
</navigation>
